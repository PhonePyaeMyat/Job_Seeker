rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Jobs collection - allow read access to all, write access for authenticated users
    match /jobs/{jobId} {
      // Anyone can read jobs (for browsing)
      allow read: if true; 
      
      // Only authenticated users can write/create jobs
      allow write: if request.auth != null; 
      
      // Allow updates to applicants field for authenticated users applying to jobs
      allow update: if request.auth != null && 
        // Only allow updating the applicants array
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['applicants']) &&
        // Ensure the user is adding themselves to the applicants array
        request.auth.uid in request.resource.data.applicants;
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Companies collection - allow read access to all, write access for authenticated users
    match /companies/{companyId} {
      allow read: if true; // Anyone can read company info
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Applications collection - users can only access their own applications
    match /applications/{applicationId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
  }
}